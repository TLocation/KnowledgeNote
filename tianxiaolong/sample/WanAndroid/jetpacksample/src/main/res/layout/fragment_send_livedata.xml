<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/fragment_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="输入要发送的消息" />

    <Button
        android:id="@+id/fragment1_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="发送" />

    <Button
        android:id="@+id/fragment2_addFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加左边fragment" />

    <Button
        android:id="@+id/fragment2_start_extend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveData扩展" />
</LinearLayout>